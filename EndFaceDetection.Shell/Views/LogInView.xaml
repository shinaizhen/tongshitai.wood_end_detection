<Window x:Class="EndFaceDetection.Shell.Views.LogInView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndFaceDetection.Shell.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="断面检测系统" Height="300" Width="350"
        Background="#FFECECEC">
    <Grid>
        <!-- 标题 -->
        <TextBlock Text="用户登录" FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <!-- 用户名输入框 -->
        <TextBox x:Name="txtUsername" Margin="50,80,50,0" Height="30"
                 Text="admin"
                 VerticalAlignment="Top"
             FontSize="14" Padding="5" BorderBrush="#FFA9A9A9" BorderThickness="1"/>
        <!-- 密码输入框 -->
        <PasswordBox x:Name="txtPassword" Margin="50,130,50,0" Height="30" VerticalAlignment="Top"
                 FontSize="14" Padding="5" BorderBrush="#FFA9A9A9" BorderThickness="1"
                     Password="888888"/>
        <!-- 登录按钮 -->
        <Button x:Name="btnLogin" Content="登录" Margin="50,180,50,0" Height="40" VerticalAlignment="Top"
            FontSize="16" FontWeight="Bold" Background="#FF4CAF50" Foreground="White"
            Click="btnLogin_Click"/>
    </Grid>
</Window>
